<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="InputText" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
        <item name="colorAccent">@color/icons</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorHint">@color/icons</item>
    </style>

    <style name="EstiloBoton" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:solidColor">@color/colorPrimary</item>
    </style>

</resources>
